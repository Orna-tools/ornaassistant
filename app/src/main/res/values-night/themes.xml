<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ornaassistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#283593</item> <!-- Deep blue -->
        <item name="colorPrimaryVariant">#1A237E</item> <!-- An even deeper shade of blue -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- White for text/icons on primary color -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4DB6AC</item> <!-- Softer teal -->
        <item name="colorSecondaryVariant">#00867D</item> <!-- A slightly darker shade of teal -->
        <item name="colorOnSecondary">@android:color/black</item> <!-- Black for text/icons on secondary color -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item> <!-- Black background -->
        <item name="android:colorBackground">@color/black</item> <!-- Black background -->

        <!-- Text colors -->
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Primary text color -->
        <item name="android:textColorSecondary">#DEFFFFFF</item> <!-- Secondary text color, slightly muted white -->

        <!-- Customize your theme here. -->
    </style>

    <!-- Dialog theme with lighter background -->
    <style name="Theme.Ornaassistant.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorSurface">#424242</item> <!-- Lighter background for dialogs -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#DEFFFFFF</item>
    </style>
</resources>
